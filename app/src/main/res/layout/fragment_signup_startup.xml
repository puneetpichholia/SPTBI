<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aakash.sptbi.Students_Fragment"
    android:id="@+id/signup_container">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/graylight"
            android:layout_margin="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignUp"
                android:textSize="80dp"
                android:layout_marginBottom="30dp" />
            <EditText
                android:id="@+id/et_signup_startup_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Enter Your Companies Name "
                style="@style/editText_style" />
            <EditText
                android:id="@+id/et_signup_startup_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Enter Contact Number"
                style="@style/editText_style" />
            <EditText
                android:id="@+id/et_signup_startup_ceo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Owner Of the Company ? "
                style="@style/editText_style" />
            <EditText
                android:id="@+id/et_signup_startup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Enter Bussiness Email  "
                style="@style/editText_style" />
            <EditText
                android:id="@+id/et_signup_startup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Enter password "
                style="@style/editText_style"/>

            <Button
                android:id="@+id/signup_startup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SignUp"
                style="@style/button_style"/>


        </LinearLayout>
    </RelativeLayout>

</FrameLayout>