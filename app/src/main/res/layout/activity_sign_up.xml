<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aakash.sptbi.AccountsPage">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_appBarLayout2">

        <include layout="@layout/app_bar_layout" android:id="@+id/signup_main_page_toolbar"/>

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientbackgroundgreenblue"
            android:id="@+id/signup_main_tabs"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signup_appBarLayout2"
        android:layout_marginStart="6dp"
        android:id="@+id/signup_main_tabPager">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
